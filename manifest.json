{
  "name": "Kanbanize Dependency Visualizer",
  "description": "Easily visualize dependencies in Kanbanize",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.kanbanize.com/*",
        "*://*.kanbanize.com/**"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/kanbanizer.js",
        "js/lib/d3.v5.min.js"
      ],
      "matches": [
        "https://*.kanbanize.com/*"
      ]
    }
  ],
  "host_permissions": [
    "https://*.kanbanize.com/*",
    "https://*.kanbanize.com/**"
  ],
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}
